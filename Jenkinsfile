pipeline {
    agent any
    environment {
        PATH = "$PATH:/etc/maven/apache-maven-3.8.4/bin"
    }
    stages {
        stage("list env vars") {
            steps {
                sh "printenv | sort"
            }
        }
        stage('Build') {
            steps {
                script {
                    sh 'mvn clean package'
                }
            }
        }
        stage("SpnarQube analysis") {
            steps {
                withSonarQubeEnv("sonarqube-8.9.2") {
                    sh "mvn sonar:sonar"
                }        
            }
        }                
    }
    post {
        success {
            script{
                mail attachLog: true, bcc: '', body: '''Hi Sender,

This is an autogenerated email.

echo "Build URL = ${env.BUILD_URL}"
sh 'echo Build Number = $BUILD_NUMBER'
echo "Pipeline Name: ${env.JOB_NAME}"

Thanks,
DevOps Team''', cc: '', from: '', replyTo: '', subject: 'Build Status: "Build Successful Job \'${env.JOB_NAME}\' (${env.BUILD_NUMBER})"', to: 'snehalgawde724@gmail.com'
            }
        }
        failure {
            script {
                mail attachLog: true, bcc: '', body: '''Hi Sender,

This is an autogenerated email.

echo "Build URL = ${env.BUILD_URL}"
echo "Build Number: (${env.BUILD_NUMBER})"
echo "Pipeline Name: ${env.JOB_NAME}"

Thanks,
DevOps Team''', cc: '', from: '', replyTo: '', subject: 'Build Status: "Build Failed Job \'${env.JOB_NAME}\' (${env.BUILD_NUMBER})"', to: 'snehalgawde724@gmail.com'
            }
        }
        
    }
}
